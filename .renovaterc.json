{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "maxwell-k"
  ],
  "extends": [
    "config:best-practices"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "npm",
      "fileMatch": [
        "^*.ts$"
      ],
      "matchStrings": [
        "import .+ from \"npm:(?<depName>.+?)@(?<currentValue>.+?)\";"
      ]
    }
  ]
}
