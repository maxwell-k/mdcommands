{
  "lint": {
    "rules": {
      "exclude": ["no-import-prefix"]
    }
  },
  "tasks": {
    "install_dislodge_main": "deno install --frozen=false --entrypoint dislodge/main.ts",
    "install_dislodge_main_test": "deno install --frozen=false --entrypoint dislodge/main_test.ts",
    "install_mdcommands_main": "deno install --frozen=false --entrypoint mdcommands/main.ts",
    "install_mdcommands_main_test": "deno install --frozen=false --entrypoint mdcommands/main_test.ts",
    "install": {
      "description": "Install dependencies for all entry points",
      "dependencies": [
        "install_dislodge_main",
        "install_dislodge_main_test",
        "install_mdcommands_main",
        "install_mdcommands_main_test"
      ]
    },
    "lint": "deno lint .",
    "test": "deno test -P --coverage",
    "all": {
      "dependencies": ["install", "lint", "test"]
    }
  },
  "test": {
    "permissions": {
      "write": ["dislodge/.tmp/"],
      "read": ["README.md", "dislodge/", "mdcommands/"]
    }
  },
  "lock": {
    "frozen": true
  }
}
